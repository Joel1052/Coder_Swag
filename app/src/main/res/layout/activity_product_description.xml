<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.ProductDescriptionActivity">
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categoryTextv" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:fontFamily="@font/racing_sans_one"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
    <ImageView
            android:layout_width="230dp"
            android:layout_height="196dp" app:srcCompat="@drawable/hat2"
            android:id="@+id/productImagev" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/categoryTextv" android:scaleType="centerInside"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintDimensionRatio="w,1:1"/>
    <TextView
            android:text="text view"
            android:layout_width="84dp"
            android:layout_height="67dp"
            android:id="@+id/productNamet"
            android:fontFamily="@font/racing_sans_one" android:textColor="@android:color/black"
            android:textSize="20sp" android:textAlignment="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/productImagev" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="@+id/productImagev"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/productPricet"
            android:fontFamily="@font/racing_sans_one"
            android:textColor="@android:color/black" android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/productNamet"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/productNamet"
            app:layout_constraintBottom_toBottomOf="@+id/productNamet" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="BUY NOW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buyNowButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/racing_sans_one" android:textSize="20sp"
            android:background="@drawable/buy_button" android:textColor="@android:color/white"
            app:layout_constraintHorizontal_bias="0.0"
    />
</android.support.constraint.ConstraintLayout>