<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:paddingBottom="5dp">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="147dp"
            tools:srcCompat="@drawable/hatimage"
            android:id="@+id/categoryimgv"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6" app:layout_constraintVertical_bias="0.0"
            android:scaleType="centerCrop"
            android:paddingBottom="50sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categorytxtv" app:layout_constraintEnd_toEndOf="@+id/categoryimgv"
            app:layout_constraintStart_toStartOf="@+id/categoryimgv" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/categoryimgv"
            app:layout_constraintBottom_toBottomOf="@+id/categoryimgv"
            tools:text="HATS"
            android:textColor="@android:color/white" android:fontFamily="@font/racing_sans_one" android:textSize="20sp"/>
</android.support.constraint.ConstraintLayout>